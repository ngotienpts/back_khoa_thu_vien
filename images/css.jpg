@media (max-width: 1199px)

.cate-list .cate-list-item {
    padding-right: 16px;
    color: #fff;
}

@media (max-width: 571px)
.grid5 .grid-item {
    padding-bottom: 8px;
    margin-bottom: 10px;
    align-items: start;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
}

@media (max-width: 1199px)
.section-title {
    padding: 15px 0 15px;
}

@media (max-width: 571px)

.cate-news .cate-mini-news .cate-mini-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-top: 0;
    padding-bottom: 5px;
    margin-top: 0;
    margin-bottom: 15px;
    border-top: none;
    border-bottom: 1px solid #e0e0e0;
}