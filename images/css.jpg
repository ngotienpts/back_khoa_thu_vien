
.nav_desktop .nav_item a {
    font-style: normal;
    font-weight: BOLD;
    font-size: 15px;
    line-height: 118.01%;
    text-transform: uppercase;
    color: #333;
}

.top-news {
    FONT-WEIGHT: 500;
    display: grid;
    width: 770px;
    grid-template-columns: repeat(3,1fr);
    grid-template-rows: auto;
    grid-gap: 15px;
    grid-template-areas:
        "main main sidebar"
        "item1 item2 item3";
}


.grid5 {
    display: grid;
    width: 100%;
    grid-template-columns: repeat(5,1fr);
    grid-template-rows: auto;
    grid-gap: 12px;
}

.news-list .news-list-item {
    display: flex;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e0e0e0;
}

